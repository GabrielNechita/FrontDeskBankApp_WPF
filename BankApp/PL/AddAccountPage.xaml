<Page x:Class="PL.AddAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAccountPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0">Type:</Label>
        <TextBox Grid.Row="0" x:Name="Type" Margin="20"/>
        <Label Grid.Row="1">Money:</Label>
        <TextBox Grid.Row="1" x:Name="Money" Margin="20"/>
        <Label Grid.Row="2">CreationDate:</Label>
        <DatePicker Grid.Row="2" x:Name="CreationDate" Margin="20" Focusable="False"/>
        <Button Grid.Column="1" Grid.Row="4" Click="AddAccount_Click" Margin="20" Width="300">Add</Button>
    </Grid>
</Page>
